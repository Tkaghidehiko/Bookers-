<%= notice %>

<h3> 投稿一覧</h3>

<table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>

<tbody>
  <% @books.each do |book| %>
  <tr>
    <td>
    <%= book.title %>
    </td>
    <td>
    <%= book.body %>
    </td>
    <td>
    <%= link_to "詳細", book_path(book.id), class: "show_#{book.id}" %>
    <%= link_to "編集", edit_book_path(book.id), class: "edit_#{book.id}" %>
    <%= link_to "削除", book_path(book.id), class: "destroy_#{book.id}", method: :delete, "data-confirm" => "本当に削除しますか？" %>

    </td>
  </tr>
<% end %>
</tbody>
</table>

<h3> 新規投稿</h3>

<%= form_for(@book) do |f| %>

<h4>Title</h4>
<div><%= f.text_field :title, class: "book_title" %></div>

<h4>Body</h4>
<div><%= f.text_area :body, class: "book_body" %></div>

<br><%= f.submit '投稿' %></br>

<% end %>