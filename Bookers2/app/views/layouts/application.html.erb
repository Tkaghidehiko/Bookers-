<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">

            <div class="row">

              <% if user_signed_in? %>
                <div class="col-lg-2">

                        <div class="navbar-header">
                          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                          </button>
                          <p class="navbar-brand" ><%= link_to "Bookers",books_path(@books) %></p>
                        </div>

                </div>

                <div class="col-lg-6"></div>

                <div class="col-lg-4">

                        <div class="collapse navbar-collapse" id="navbarEexample7">
                          <ul class="nav navbar-nav">
                            <li>
                              <%= link_to user_path(current_user.id), class: "user_#{current_user.id}" do %>
                              <span class="glyphicon glyphicon-tree-deciduous" aria-hidden="true"></span>  Home
                              <% end %>
                            </li>
                            <li>
                              <%= link_to users_path(@users), class: "users" do %>
                              <span class="glyphicon glyphicon-user" aria-hidden="true"></span>  Users
                              <% end %>
                              </li>
                            <li>
                              <%= link_to books_path(@books), class: "books" do %>
                                <span class="glyphicon glyphicon-send" aria-hidden="true"></span>  Books
                                <% end %>
                              </li>
                            <li>
                              <%= link_to destroy_user_session_path, class: "logout", method: :delete do %>
                              <span class="glyphicon glyphicon-unchecked" aria-hidden="true"></span>  Log out
                              <% end %>
                              </li>
                          </ul>
                        </div>

                </div>

              <% else %>

                <div class="col-lg-2">

                        <div class="navbar-header">
                          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                          </button>
                          <p class="navbar-brand" ><%= link_to "Bookers",root_path %></p>
                        </div>

                </div>

                <div class="col-lg-6"></div>

                <div class="col-lg-4">

                        <div class="collapse navbar-collapse" id="navbarEexample7">
                          <ul class="nav navbar-nav">
                            <li><%= link_to "Home", root_path, class: "home" %></li>
                            <li><%= link_to "About", about_path, class: "about" %></li>
                            <li><%= link_to "sign up", new_user_registration_path, class: "sign_up" %></li>
                            <li><%= link_to "login", new_user_session_path, class: "sign_in" %></li>
                          </ul>
                        </div>

                </div>

              <% end %>

            </div>

        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
