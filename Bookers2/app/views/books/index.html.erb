<div class="container">
	<div class="row">

		<%= render 'books/list', book: @book %>


        <div class="col-md-9">


				<h2>Books</h2>
				<table class="table">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
					<% if @books.present? %>
					<% @books.each do |book| %>
						<tr>
							<td><%= attachment_image_tag book.user, :profile_image, :size => "35x35", format: 'jpeg', fallback: "no_image1.jpg" %></td>
							<td><%= link_to book_path(book.id), class: "book_#{book.id}" do %>
								<%= book.title %>
								<% end %>
							</td>

							<td><%= book.body %></td>
						</tr>
					<% end %>
					<% end %>
					</tbody>
				</table>
        </div>
    </div>
</div>