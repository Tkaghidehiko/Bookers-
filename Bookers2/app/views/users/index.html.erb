<div class="container">
	<div class="row">

		<%= render 'books/list', book: @book %>


        <div class="col-md-9">


				<h2>Users</h2>
				<table class="table">
					<thead>
						<tr>
							<th></th>
							<th>image</th>
							<th>name</th>
						</tr>
					</thead>
					<tbody>
					<% @users.each do |user| %>
						<tr>
							<td><%= attachment_image_tag user, :profile_image, class: "user_image", :size => "35x35", format: 'jpeg', fallback: "no_image1.jpg" %></td>
							<td>
								<%= user.name %>
							</td>

							<td>
								<%= link_to "Show", user_path(user.id), class: "user_#{user.id}"  %>
							</td>
						</tr>
					<% end %>
					</tbody>
				</table>
        </div>
    </div>
</div>